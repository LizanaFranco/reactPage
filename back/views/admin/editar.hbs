<h1>Editar</h1>
<form action="/actualizar" method="post" enctype="multipart/form-data" class="formEditar">
    <input type="hidden" value="{{game.id}}" name="id">
    <input type="text" class="inputsForm" name="Nombre" placeholder="Nombre" value="{{game.Nombre}}">
    <select name="Tipo" id="Tipo">
        <option value="{{game.Tipo}}" selected>{{game.Tipo}}</option>
        <option value="Solo">Solo</option>
        <option value="Multijugador">Multijugador</option>
        <option value="Accion/Aventura">Accion/Aventura</option>
        <option value="Disparos">Disparos</option>
        <option value="Deportes">Deportes</option>
        <option value="Estrategia">Estrategia</option>
        <option value="Simulacion">Simulacion</option>
    </select>
    <input type="text" class="inputsForm" name="Precio" placeholder="Precio" value="{{game.Precio}}">
    <input type="text" class="inputsForm" name="Stock" placeholder="Stock" value="{{game.Stock}}">
    <textarea class="textareaForm" name="Descripcion" placeholder="Descripcion">{{game.Descripcion}}</textarea>
    <input type="file" class="fileForm" name="imagen" id="imagen">
    <input type="checkbox" class="checkForm" name="img_delete" id="img_delete" value="1">
    eliminar imagen actual ?
    <input type="hidden" name="img_original" value="{{game.imgId}}">
    <button type="submit" class="buttonForm">Actualizar</button>
</form>
{{#if error}}
<p>{{message}} </p>
{{/if}}

<a href="/" class="btn btn-return">Volver</a>
